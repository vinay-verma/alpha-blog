<% if @user.errors.any? %>
    <h2>There following errors are preventing the user to be saved</h2>
    <ul>
        <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg%></li>
        <% end %>
    </ul>
<% end %>

<%= form_with(model: @user, local: true) do |f| %>
    <p>
        <%= f.label :username %>
        <br>
        <%= f.text_field :username, placeholder: "Enter a username" %>
    </p>

    <p>
        <%= f.label :email %>
        <br>
        <%= f.email_field :email, placeholder: "Enter your email address" %>
    </p>

    <p>
        <%= f.label :password %>
        <br>
        <%= f.password_field :password, placeholder: "Enter your password" %>
    </p>

    <p>
        <%= f.submit(@user.new_record? ? "Sign up" : "Update account" )%>
    </p>
<% end %>