<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th colspan="3">Actions</th>
            <th>Written By</th>
        </tr>
    </thead>
    <tbody>
        <% @articles.each do |item| %>
                    <tr>
                        <td><%= item.title %></td>
                        <td><%= item.description %></td>
                        <td><%= link_to 'Show', article_path(item) %></td>
                        <% if logged_in? && (item.user == current_user || current_user.admin?)%>
                            <td><%= link_to 'Edit', edit_article_path(item) %></td>
                            <td><%= link_to 'Delete', article_path(item), method: :delete, data: {confirm: "are you sure"} %></td>
                        <% end %>
                        <td><%= item.user.username if item.user%></td>
                    </tr>
        <% end %>
    </tbody>
</table>
<br>
